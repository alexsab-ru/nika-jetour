---
interface Props {
    view?: string,
    classes?: string,
    url?: string,
    title?: string,
    dataTitle?: string,
    dataFormName?: string,
}
const { 
    view = 'link',
    classes,
    url,
    title = 'BUTTON',
    dataTitle,
    dataFormName,
} = Astro.props;
import './buttons.scss'
---

{
    view === 'link' ? (
    <a
        class={`btn ${classes}`}
        href={url ? url : '#'}
        data-title={dataTitle}
        data-form_name={dataFormName}
    >
        {title}
    </a>
    ) : 
    view === 'form-button' ? (
    <input 
        type="submit" 
        class={`btn ${classes}`} 
        value={title}
    >
    ) : 
    view === 'popup-link' ? (
        <a 
            class={`btn popup-link ${classes}`}
            href={url ? url : '#'}
            data-title={dataTitle}
            data-form_name={dataFormName}
        >
            {title}
        </a>
    ) : ('')
}
